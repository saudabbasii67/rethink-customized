<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Label at the top left corner -->
    <TextView
        android:id="@+id/app_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_gravity="start" />

    <!-- TextView to display total packages scanned -->
    <TextView
        android:id="@+id/total_apps_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Packages Scanned: 0"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- TextView to display total threats found -->
    <TextView
        android:id="@+id/threat_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Threats Found: 0"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- TextView to display current app being scanned -->
    <TextView
        android:id="@+id/current_app_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currently Scanning: None"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp">

        <!-- ProgressBar centered on the screen with larger size -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>
